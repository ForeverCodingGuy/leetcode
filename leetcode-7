class Solution {
public:
    int reverse(int x) 
    {
        int res = 0;
        int t = 0;

        while(x != 0)
        {
            t = x % 10;

            if(res > 214748364 || (res == 214748364 && t > 7)) return 0;
            if(res < -214748364 || (res == -214748364 && t < -8)) return 0;

            res = res * 10 + t;
            x /= 10;
        }

        return res;
    }
};
