class Solution {
public:
    int lengthOfLongestSubstring(string s) 
    {
        if(s.size() == 0) return 0;
        unordered_set<char> look_up;
        int len = 1,left = 0;
        for(int i = 0;i < s.size(); i++)
        {
            while(look_up.find(s[i]) != look_up.end())
            {
                look_up.erase(s[left]);
                ++ left;
            }

            look_up.insert(s[i]);
            len = max(len, i - left + 1);
        }

        return len;
    }
};
