//1>iteration
class Solution {
public:
    int getMinimumDifference(TreeNode* root) 
    {
        TreeNode* cur = root;
        TreeNode* pre = nullptr;
        int rsu = INT_MAX;
        stack<TreeNode*> st;
        while(cur || !st.empty())
        {
            if(cur)
            {
                st.push(cur);
                cur = cur -> left;
            }
            else
            {
                cur = st.top();
                st.pop();
                if(pre) rsu = min(rsu,cur -> val - pre -> val);
                pre = cur;
                cur = cur -> right;
            }
        }
        return rsu;
    }
};


//2>recursion
class Solution {
public:
    int rsu = INT_MAX;
    TreeNode* pre;
    void traversal(TreeNode* cur)
    {
        if(cur == nullptr) return ;
        traversal(cur -> left);
        if(pre) rsu = min(rsu,cur -> val - pre -> val);
        pre = cur;
        traversal(cur -> right);
    }
    int getMinimumDifference(TreeNode* root) 
    {
        traversal(root);
        return rsu;
    }
};
