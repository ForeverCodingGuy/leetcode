class Solution {
public:
    int findLengthOfLCIS(vector<int>& nums) 
    {
        if(nums.size() == 0) return 0;
        vector<int> dp(nums.size() + 1,1);

        int rsu = 1;
        for(int i = 0;i < nums.size() - 1;i++)
        {
            if(nums[i + 1] > nums[i]) dp[i + 1] = max(dp[i + 1],dp[i] + 1);
            rsu = max(rsu,dp[i + 1]);
        }
        return rsu;
    }
};
