class Solution {
public:
    bool isAnagram(string s, string t) 
    {
        int record[26]={0};
        for(auto& i:s)
        {
            record[i-'a']++;
        }
        for(auto& j:t)
        {
            record[j-'a']--;
        }
        for(int k=0;k<26;k++)
        {
            if(record[k]!=0)
            {
                return false;
            }
        }
        return true;
    }
};
