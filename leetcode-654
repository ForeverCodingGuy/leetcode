class Solution {
public:
    TreeNode* traversal(vector<int>& nums,int left,int right)
    {
        if(left == right) return nullptr;

        int miterindex = left ;

        for(int i = left + 1;i < right;i ++)
        {
            if(nums[i] > nums[miterindex]) miterindex = i;
        }

        TreeNode* root = new TreeNode(nums[miterindex]);

        root -> left = traversal( nums,left,miterindex);
        root -> right = traversal( nums,miterindex + 1,right);

        return root;
    }
    TreeNode* constructMaximumBinaryTree(vector<int>& nums) 
    {
        return traversal(nums,0,nums.size());
    }
};
