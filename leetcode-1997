class Solution {
public:
    int pivotIndex(vector<int>& nums)
    {

        int sum=0;
        for(int i=0;i<nums.size();i++)
        {
            sum+=nums[i];
        }
        int sum_2=0;;
        for(int j=0;j<nums.size();j++)
        {
            sum-=nums[j];
            if(sum_2==sum)
            {
                return j;
            }
            sum_2+=nums[j];
        }
        return -1;
    }
};
